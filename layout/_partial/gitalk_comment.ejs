
<div id="gitalk-container"></div>   
<link rel="stylesheet" href="https://unpkg.com/gitalk/dist/gitalk.css">
<script src="https://unpkg.com/gitalk/dist/gitalk.min.js"></script>
<script>
    let gitalk = new Gitalk({
        clientID: '<%- gitalkConfig.oauth.clientId %>',
        clientSecret: '<%- gitalkConfig.oauth.clientSecret %>',
        repo: '<%- gitalkConfig.repo %>',
        owner: '<%- gitalkConfig.owner %>',
        admin: <%- JSON.stringify(gitalkConfig.admin) %>,
        id: '<%- date(page.date, 'YYYY-MM-DD HH:mm:ss') %>',
        title: '<%- page.title %>',
        distractionFreeMode: <%- gitalkConfig.distractionFreeMode %>  // Facebook-like distraction free mode
    });
    gitalk.render('gitalk-container');
</script>